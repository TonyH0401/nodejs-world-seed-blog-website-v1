{{!-- trang blog detail --}}
<div class="mt-4 container detail-page">
    {{#if data}}
    <div class="row">
        <div class="card mt-3" style="width: 70rem;">
            <div class="card-body">
                <p class="h2 text-center mx-auto">{{data.title}} </p>
                <p class="created-date">{{data.createdAt}}</p>
                <p style="font-size: 15px;">{{data.author}} </p>
                <p class="card-text text-justify">{{data.content}}</p>
            </div>
        </div>
    </div>
    {{/if}}

    {{#if msg}}
    <h1>{{msg}}</h1>
    {{/if}}

</div>
