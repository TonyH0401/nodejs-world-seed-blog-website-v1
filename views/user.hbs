<div class="background">
    <section class="vh-100">
        <div class="container py-0 h-100">
            {{#if data}}
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-lg-6 mb-4 mb-lg-0 align-items-stretch">
                    <div class="card mx-auto align-items-stretch" style="border-radius: .5rem;">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                    alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                                <h5>{{data.username}}</h5>
                                <p>"{{data.user_bio}}"</p>
                                {{!-- <i class="far fa-edit mb-5"></i> --}}
                                <a href="/users/{{data.slug}}/edit">
                                    <button type="button" class="btn btn-primary">Edit</button>
                                </a>
                                <a href="/">
                                    <button type="button" class="btn btn-danger">Return</button>
                                </a>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6><b>Information</b></h6>
                                    <hr class="mt-0 mb-4">
                                    {{!-- <div class="row pt-1"> --}}
                                        <div class="col pt-1">
                                            <div class="col col-20 mb-3">
                                                <h6>Email</h6>
                                                <p class="text-muted">{{data.email}}</p>
                                            </div>
                                            <div class="col col-10 mb-3">
                                                <h6>Phone</h6>
                                                <p class="text-muted">{{data.phone}}</p>
                                            </div>
                                        </div>
                                        {{!-- <h6>Projects</h6> --}}
                                        <hr class="mt-0 mb-4">
                                        <div class="col pt-1">
                                            <div class="col col-6 mb-3">
                                                <h6>Age</h6>
                                                <p class="text-muted">{{data.age}}</p>
                                            </div>
                                            {{!-- <div class="col col-6 mb-3">
                                                <h6>Blogs</h6>
                                                <p class="text-muted">{{data.blog_counter}}</p>
                                            </div> --}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
    </section>
</div>