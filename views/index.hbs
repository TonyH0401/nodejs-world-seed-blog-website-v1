<div class="background">
    {{!-- trang chủ --}}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">GO BLOG</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mr-5">

                    <li class="nav-item">
                        <a class="nav-link" href="/create">Tạo bài đăng</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                            data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            {{username}}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/users/{{slug}}">Thông tin</a>
                            {{!-- <a class="dropdown-item" href="#">Another action</a> --}}
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="/login">{{status}}</a>
                        </div>
                    </li>
                </ul>

            </div>
    </nav>

    <div class="mt-4 container">
        {{#each data}}
        <div class="row blog-box mb-5">
            <div class="col-lg-5 p-0">
                <a href="/{{slug}}">
                    <img class="w-100" src="{{image}}" alt="{{name}}">
                </a>
            </div>

            <div class="col-lg-7">
                <div class="card-body index">
                    <a style="text-decoration: none;" href="/{{slug}}">
                        <h1 class="card-title">{{title}}</h1>
                    </a>
                    <p style="font-size: 11px">{{createdAt}}</p>
                    <p class="text-justify">{{description}}</p>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>