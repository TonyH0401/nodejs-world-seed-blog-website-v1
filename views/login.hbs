<div class="background">
  <div class="wrapper fadeInDown">
    <div id="formContent">
      <!-- Tabs Titles -->

      <!-- Icon -->
      <div class="fadeIn first">
        <img class="w-25 p-3" src="/images/logo.png" id="icon" alt="User Icon" />
      </div>

      <!-- Login Form -->
      <form method="POST" action="/login">
        <input name="username" type="text" id="login" class="fadeIn second" name="login" placeholder="login">
        <input name="password" type="password" id="password" class="fadeIn third" name="login" placeholder="password">
        <input type="submit" class="fadeIn fourth" value="Log In">
        {{#if message}}
        <div class="form-group">
          <div class="mx-auto w-50 alert alert-danger alert-dismissible fade show">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{message}}
          </div>
        </div>
        {{/if}}
      </form>



      <!-- Remind Passowrd -->
      <div id="formFooter">
        {{!-- <a class="underlineHover" href="#">Forgot Password?</a> --}}
        <a class="underlineHover" href="/register">Sign up</a>
      </div>
    </div>
  </div>
</div>